FROM node:18-alpine

WORKDIR /cube

# Minimal placeholder for Cube dev: small package.json and a dev script that keeps the container alive
COPY package.json ./
RUN if [ -f package.json ]; then npm install --no-audit --no-fund; fi

COPY . .

# Use sh -c as entrypoint to ensure sh is available in Alpine
ENTRYPOINT ["sh", "-lc"]

CMD ["npm run dev"]


