FROM python:3.11-slim

WORKDIR /app

# Install system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    unixodbc-dev \
    unixodbc \
    && rm -rf /var/lib/apt/lists/*

# Copy and install python deps if present
COPY requirements.txt ./
# Install Python dependencies at build time to avoid long installs on container start
RUN if [ -f requirements.txt ]; then pip install --no-cache-dir -r requirements.txt; fi

# Copy source
COPY . .

# Default command (docker-compose can override with a command)
CMD ["bash", "-lc", "python scripts/setup_database.py && uvicorn app.main:app --host 0.0.0.0 --port 8000 --log-level info"]


