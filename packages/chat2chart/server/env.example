# Aiser Chat2Chart Platform Configuration
# Copy this file to .env and update with your values

# =============================================================================
# BASIC SETTINGS
# =============================================================================
APP_NAME=Aiser Chat2Chart Platform
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SERVER=localhost
POSTGRES_DB=aiser_world
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/aiser_world

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# AI MODEL SETTINGS
# =============================================================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_ID=gpt-4o-mini

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# Storage Provider: local, s3, azure
CLOUD_STORAGE_PROVIDER=local
CLOUD_STORAGE_ENABLED=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=aiser-data
AZURE_STORAGE_ENDPOINT_SUFFIX=core.windows.net

# Cloud Storage Settings
CLOUD_STORAGE_CDN_URL=https://your-cdn-domain.com
CLOUD_STORAGE_RETENTION_DAYS=365

# =============================================================================
# CUBE.JS INTEGRATION
# =============================================================================
CUBE_API_URL=http://localhost:4000/cubejs-api/v1
CUBE_API_SECRET=your_cube_secret_key
CUBEJS_TOKEN=your_cubejs_authentication_token

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# ENTERPRISE SETTINGS
# =============================================================================
AISER_DEPLOYMENT_MODE=development
AISER_ORG_NAME=Your Organization Name
AISER_ADMIN_EMAIL=admin@yourcompany.com
AUTH_MODE=internal

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_ANALYSIS=true
ENABLE_CUBE_INTEGRATION=true
ENABLE_MCP_CHARTS=false
ENABLE_FUNCTION_CALLING=true
ENABLE_INTELLIGENT_MODELING=true

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_TYPE=local
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800
MAX_FILE_SIZE_MB=50

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
