FROM python:3.11-slim

WORKDIR /app

# Install system deps required for building some Python packages
RUN apt-get update && apt-get install -y build-essential libpq-dev curl && rm -rf /var/lib/apt/lists/*

# Copy poetry config and install (if using Poetry)
COPY pyproject.toml poetry.lock ./
RUN pip install --no-cache-dir poetry && poetry config virtualenvs.create false && poetry install --no-root --only=main --no-interaction --no-ansi

# Copy source
COPY src ./src

EXPOSE 5000

CMD ["poetry", "run", "uvicorn", "src.app.main:app", "--host", "0.0.0.0", "--port", "5000"]


