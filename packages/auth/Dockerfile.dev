FROM python:3.11-slim

WORKDIR /app

# Install system deps required for building some Python packages
RUN apt-get update && apt-get install -y build-essential libpq-dev curl postgresql-client netcat-openbsd && rm -rf /var/lib/apt/lists/*

# Copy poetry config and install
COPY pyproject.toml ./
RUN pip install --no-cache-dir poetry --timeout=600 && poetry self update && poetry lock && poetry install --no-root --no-interaction --no-ansi
RUN poetry run pip install alembic # Ensure alembic is installed within the Poetry venv

# Copy source code and Alembic configuration
COPY src ./src
COPY alembic.ini /app/alembic.ini

# Explicitly create __init__.py files to ensure Python recognizes packages
RUN touch src/app/__init__.py
RUN touch src/app/modules/__init__.py

ENV PYTHONPATH=/app/src

EXPOSE 5000

CMD ["poetry", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "5000"]


